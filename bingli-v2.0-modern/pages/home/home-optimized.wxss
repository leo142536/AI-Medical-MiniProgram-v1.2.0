/* pages/home/home-optimized.wxss - 优化后的首页样式 */

/* 引入全局组件样式 */
@import "../../components/ui-components.wxss";

/* 容器布局 */
.container {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
  min-height: 100vh;
  position: relative;
  padding-bottom: 160rpx;
}

/* 用户信息区域 - 现代化设计 */
.user-section-modern {
  padding: 60rpx 30rpx 40rpx;
  color: var(--bg-primary);
}

.user-card {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.user-avatar {
  position: relative;
}

.user-info {
  flex: 1;
}

.greeting {
  opacity: 0.9;
  margin-bottom: 8rpx;
}

.user-name {
  margin-bottom: 12rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.weather-info {
  opacity: 0.8;
}

/* 快捷操作区域 - 现代化 */
.quick-actions-modern {
  margin: 0 20rpx;
  background: var(--bg-primary);
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: var(--shadow-medium);
  transform: translateY(-30rpx);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.actions-grid {
  gap: 20rpx;
}

.action-item-modern {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 16rpx;
  border-radius: 16rpx;
  background: var(--bg-accent);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
  position: relative;
  transition: var(--transition);
}

.action-item-modern:active {
  background: var(--bg-secondary);
  transform: translateY(2rpx) scale(0.98);
  box-shadow: var(--shadow-light);
}

.action-icon-modern {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, var(--primary-light) 0%, var(--primary-color) 100%);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
  box-shadow: 0 6rpx 16rpx rgba(66, 165, 245, 0.25);
  transition: var(--transition);
}

.action-item-modern:active .action-icon-modern {
  transform: scale(0.9);
  box-shadow: 0 3rpx 12rpx rgba(66, 165, 245, 0.3);
}

.action-icon-text {
  font-size: 36rpx;
  color: var(--bg-primary);
}

.action-title {
  text-align: center;
  font-weight: 500;
  margin-top: 8rpx;
}

.action-badge {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
}

/* 统计概览区域 */
.stats-section {
  margin: 0 20rpx 30rpx;
}

.stats-grid {
  gap: 20rpx;
}

.stat-card {
  padding: 32rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
}

.stat-icon {
  font-size: 48rpx;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, var(--secondary-color) 0%, rgba(3, 218, 198, 0.8) 100%);
  border-radius: 20rpx;
}

.stat-info {
  flex: 1;
}

.stat-number {
  display: block;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 4rpx;
}

.stat-label {
  opacity: 0.7;
}

/* 现代化区块样式 */
.section-modern {
  margin: 30rpx 20rpx;
  background: var(--bg-primary);
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: var(--shadow-light);
  border: 1rpx solid rgba(0, 0, 0, 0.05);
}

.section-header-modern {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 32rpx 20rpx;
}

.header-actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.action-btn-modern {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: var(--transition);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.add-btn {
  background: linear-gradient(135deg, var(--success) 0%, #45a049 100%);
}

.delete-btn {
  background: linear-gradient(135deg, var(--error) 0%, #d32f2f 100%);
}

.btn-icon {
  color: var(--bg-primary);
  font-size: 24rpx;
  font-weight: bold;
}

.action-btn-modern:active {
  transform: scale(0.9);
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.2);
}

/* 家庭成员区域 - 现代化 */
.member-scroll-modern {
  padding: 0 32rpx 32rpx;
}

.member-list-modern {
  display: flex;
  gap: 20rpx;
  padding-bottom: 20rpx;
}

.member-card-modern {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-width: 140rpx;
  padding: 24rpx 16rpx;
  background: var(--bg-accent);
  border-radius: 20rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.05);
  transition: var(--transition);
  position: relative;
}

.member-card-modern:active {
  background: var(--bg-secondary);
  transform: translateY(-2rpx);
  box-shadow: var(--shadow-light);
}

.member-avatar-container {
  position: relative;
  margin-bottom: 16rpx;
}

.member-relation-badge {
  position: absolute;
  bottom: -8rpx;
  left: 50%;
  transform: translateX(-50%);
}

.member-name {
  text-align: center;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.member-status {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.status-text {
  opacity: 0.7;
}

.delete-member-btn-modern {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  width: 32rpx;
  height: 32rpx;
  background: var(--error);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(244, 67, 54, 0.3);
}

.delete-icon {
  color: var(--bg-primary);
  font-size: 20rpx;
  font-weight: bold;
}

/* 添加成员卡片 */
.add-member-card {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
  color: var(--bg-primary);
  border: 2rpx dashed rgba(255, 255, 255, 0.5);
}

.add-member-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.add-icon-large {
  font-size: 48rpx;
  font-weight: 300;
}

.add-text {
  opacity: 0.9;
}

/* 活动时间线 */
.activity-timeline {
  padding: 0 32rpx 32rpx;
}

.timeline-item {
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
  margin-bottom: 24rpx;
  position: relative;
}

.timeline-item:not(:last-child)::after {
  content: '';
  position: absolute;
  left: 12rpx;
  top: 40rpx;
  bottom: -24rpx;
  width: 2rpx;
  background: linear-gradient(180deg, var(--primary-color), transparent);
}

.timeline-dot {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background: var(--primary-color);
  flex-shrink: 0;
  margin-top: 8rpx;
  box-shadow: 0 0 0 6rpx rgba(25, 118, 210, 0.1);
}

.timeline-dot.medical { background: var(--info); }
.timeline-dot.reminder { background: var(--warning); }
.timeline-dot.record { background: var(--success); }

.timeline-content {
  flex: 1;
  padding: 20rpx;
}

.activity-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.activity-title {
  font-weight: 500;
}

.activity-time {
  opacity: 0.6;
}

.activity-desc {
  margin-bottom: 16rpx;
  line-height: 1.5;
}

.activity-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.meta-tags {
  display: flex;
  gap: 8rpx;
}

/* 提醒卡片 */
.reminder-cards {
  padding: 0 32rpx 32rpx;
}

.reminder-card-modern {
  padding: 24rpx;
  margin-bottom: 16rpx;
  border-left: 4rpx solid var(--primary-color);
}

.reminder-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.reminder-icon {
  font-size: 32rpx;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--bg-accent);
  border-radius: 50%;
}

.reminder-priority {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
}

.priority-high { background: var(--error); }
.priority-medium { background: var(--warning); }
.priority-low { background: var(--success); }

.reminder-content {
  flex: 1;
}

.reminder-title {
  font-weight: 500;
  margin-bottom: 8rpx;
}

.reminder-desc {
  margin-bottom: 12rpx;
  line-height: 1.5;
}

.reminder-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 空状态动画 */
.empty-animation {
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-20rpx); }
}

.empty-actions {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  width: 100%;
  max-width: 400rpx;
}

/* 加载覆盖层 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.loading-container {
  background: var(--bg-primary);
  border-radius: 16rpx;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
  box-shadow: var(--shadow-medium);
}

.loading-text {
  opacity: 0.7;
}

/* 响应式优化 */
@media (max-width: 750rpx) {
  .stats-grid {
    grid-template-columns: 1fr;
  }
  
  .actions-grid {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .user-card {
    flex-direction: column;
    text-align: center;
    gap: 16rpx;
  }
}

/* 深色模式支持 */
@media (prefers-color-scheme: dark) {
  .container {
    background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
  }
  
  .section-modern {
    background: #2d2d2d;
    border-color: rgba(255, 255, 255, 0.1);
  }
  
  .quick-actions-modern {
    background: #2d2d2d;
    border-color: rgba(255, 255, 255, 0.1);
  }
} 