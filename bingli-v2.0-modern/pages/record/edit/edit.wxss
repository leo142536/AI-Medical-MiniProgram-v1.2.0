/* pages/record/edit/edit.wxss */
.edit-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f7f7f7;
}

/* 顶部操作栏 */
.top-actions {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 32rpx;
  background-color: #fff;
  border-bottom: 2rpx solid #f0f0f0;
}

.action-btn {
  padding: 16rpx 32rpx;
  border-radius: 24rpx;
  font-size: 28rpx;
  border: none;
  min-width: 120rpx;
  text-align: center;
}

.cancel-btn {
  background-color: #f5f5f5;
  color: #666;
}

.save-btn {
  background-color: #07C160;
  color: #fff;
}

.page-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

/* 表单容器 */
.form-container {
  flex: 1;
  padding: 0 20rpx 20rpx;
}

/* 表单区块 */
.form-section {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  padding: 24rpx 24rpx 0;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 24rpx 0;
}

.add-btn {
  background-color: #07C160;
  color: #fff;
  border: none;
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

/* 表单项 */
.form-item {
  display: flex;
  align-items: flex-start;
  padding: 24rpx;
  border-bottom: 2rpx solid #f8f9fa;
}

.form-item:last-child {
  border-bottom: none;
}

.form-item.textarea {
  align-items: flex-start;
}

.label {
  font-size: 28rpx;
  color: #333;
  min-width: 160rpx;
  padding-top: 12rpx;
  position: relative;
}

.label.required::after {
  content: '*';
  color: #ff4757;
  margin-left: 4rpx;
}

.input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  background-color: #f8f9fa;
  padding: 16rpx 20rpx;
  border-radius: 12rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.input:focus {
  background-color: #fff;
  border-color: #07C160;
}

.textarea-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  background-color: #f8f9fa;
  padding: 16rpx 20rpx;
  border-radius: 12rpx;
  border: 2rpx solid transparent;
  min-height: 120rpx;
  transition: all 0.3s ease;
}

.textarea-input:focus {
  background-color: #fff;
  border-color: #07C160;
}

/* 选择器输入框 */
.picker-input {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #f8f9fa;
  padding: 16rpx 20rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
}

.picker-input.placeholder {
  color: #999;
}

.arrow {
  color: #999;
  font-size: 24rpx;
}

/* 处方药物列表 */
.prescription-list {
  padding: 0 24rpx 24rpx;
}

.prescription-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #f8f9fa;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}

.prescription-item:last-child {
  margin-bottom: 0;
}

.prescription-info {
  flex: 1;
}

.prescription-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.prescription-details {
  font-size: 24rpx;
  color: #666;
}

.prescription-actions {
  margin-left: 16rpx;
}

.delete-btn {
  color: #ff4757;
  font-size: 24rpx;
  padding: 8rpx 16rpx;
}

.empty-prescription {
  padding: 40rpx 24rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

/* 图片网格 */
.images-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  padding: 0 24rpx 24rpx;
}

.image-item {
  position: relative;
  aspect-ratio: 1;
  border-radius: 12rpx;
  overflow: hidden;
  background-color: #f5f5f5;
}

.image {
  width: 100%;
  height: 100%;
}

.image-delete {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 48rpx;
  height: 48rpx;
  background-color: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
}

.empty-images {
  padding: 40rpx 24rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
} 