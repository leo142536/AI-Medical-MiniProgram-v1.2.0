/* pages/settings/settings.wxss */
.container {
  padding: 20rpx;
  background: #f8f9fa;
  min-height: 100vh;
}

/* 头部样式 */
.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(102, 126, 234, 0.3);
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 区块样式 */
.section {
  background: white;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
}

.section-title {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: #f8f9fa;
  border-bottom: 1rpx solid #eee;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section-title .icon {
  margin-right: 10rpx;
  font-size: 32rpx;
}

/* 设置项样式 */
.setting-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.3s ease;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-item:active {
  background-color: #f8f9fa;
}

.item-content {
  display: flex;
  align-items: center;
  flex: 1;
}

.item-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
  width: 50rpx;
  text-align: center;
}

.item-info {
  flex: 1;
}

.item-title {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 5rpx;
}

.item-desc {
  font-size: 24rpx;
  color: #999;
  line-height: 1.4;
}

.arrow {
  font-size: 28rpx;
  color: #ccc;
  margin-left: 10rpx;
}

/* 开关样式 */
switch {
  transform: scale(0.8);
}

/* 危险区域样式 */
.danger-section {
  border: 2rpx solid #ff4757;
  background: #fff5f5;
}

.danger-section .section-title {
  background: #fee;
  color: #ff4757;
}

.danger-item .item-title {
  color: #ff4757;
}

.danger-item .item-desc {
  color: #ff9999;
}

/* 存储信息样式 */
.storage-info {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-top: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.storage-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.storage-bar {
  height: 16rpx;
  background: #e9ecef;
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 15rpx;
}

.storage-used {
  height: 100%;
  background: linear-gradient(90deg, #07c160 0%, #00a854 100%);
  border-radius: 8rpx;
  transition: width 0.5s ease;
}

.storage-text {
  font-size: 24rpx;
  color: #999;
  text-align: center;
}

/* 加载状态 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  color: white;
  font-size: 30rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top: 4rpx solid white;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 响应式设计 */
@media (max-width: 600rpx) {
  .container {
    padding: 15rpx;
  }
  
  .setting-item {
    padding: 25rpx 20rpx;
  }
  
  .item-icon {
    font-size: 36rpx;
    margin-right: 15rpx;
  }
  
  .item-title {
    font-size: 28rpx;
  }
  
  .item-desc {
    font-size: 22rpx;
  }
}

/* 深色模式支持 */
.dark-mode .container {
  background: #1a1a1a;
}

.dark-mode .section {
  background: #2d2d2d;
}

.dark-mode .section-title {
  background: #3a3a3a;
  color: #e0e0e0;
}

.dark-mode .setting-item {
  border-bottom-color: #404040;
}

.dark-mode .setting-item:active {
  background-color: #3a3a3a;
}

.dark-mode .item-title {
  color: #e0e0e0;
}

.dark-mode .item-desc {
  color: #aaa;
}

.dark-mode .storage-info {
  background: #2d2d2d;
}

.dark-mode .storage-bar {
  background: #404040;
} 